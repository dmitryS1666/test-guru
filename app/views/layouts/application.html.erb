<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav">
      <div class="index"><%= link_to 'TestGuru', root_path %></div>
      <% if logged_in? %>
          <div class="exit"><%= link_to 'Выход', logout_url %></div>
          <div class="user">Welcome, <b><%= current_user.email %></b> Guru</div>
      <% else %>
          <div class="sign_up"><%= link_to 'Регистрация', signup_url %></div>
          <div class="login"><%= link_to 'Логин', login_url %></div>
      <% end %>
    </div>

    <%= yield %>

    <%= render 'shared/footer' %>
  </body>
</html>
