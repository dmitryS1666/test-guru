<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :name %> <br>
    <%= form.text_field :name %> <br>
  </p>

  <p>
    <%= form.label :url_file %> <br>
    <%= form.text_field :url_file %> <br>
  </p>

  <p>
    <%= form.label :rule_name %> <br>
    <%= form.text_field :rule_name %> <br>
  </p>

  <p>
    <%= form.label :rule_value %> <br>
    <%= form.text_field :rule_value %> <br>
  </p>

  <p> <%= form.submit %> </p>

<% end %>