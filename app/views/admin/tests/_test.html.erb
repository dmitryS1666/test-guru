<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: {test_id: test.id} %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test.level) %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"> <%= test.timer %> </td>

  <td class="align-middle"><%= link_to t('.show_link'), admin_test_path(test) %></td>
  <td class="align-middle">
    <%= link_to t('.edit_link'),
                edit_admin_test_path(test),
                data: {test_id: test.id},
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle">
    <%= link_to t('.delete_link'), admin_test_path(test),
                      method: :delete,
                      data: {confirm: t('.warning') } %>
  </td>
</tr>